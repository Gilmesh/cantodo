<footer id="stats" class="<%= stats.attr("total") > 0 ? "show" : "" %>">
	<a id="clear-completed">Clear <%= stats.attr("completed") %> completed item<%= stats.attr("completed") == 1 ? "" : "s" %></a>
	<div id="todo-count"><span><%= stats.attr("remaining") %></span> item<%= stats.attr("remaining") == 1 ? "" : "s" %> left</div>
</footer>